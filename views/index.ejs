<div id="landing-page">
  <div id="container">
    <div id="list-guide">
      <ul id="list"></ul>
    </div>
    <form id="item-form" autocomplete="off">
      <div id="first-row">
        <input
          class="input"
          id="todo"
          type="text"
          placeholder="Add an item to your to-do list"
        />
        <button class="button" id="add-button">
          <img id="plus-icon" src="/images/plus.png" />
        </button>
      </div>
    </form>

    <form id="number-form" method="POST" action="/" autocomplete="off">
      <div id="second-row">
        <input
          class="input"
          id="phone-number"
          type="tel"
          name="number"
          onInput="this.value = phoneFormat(this.value)"
          placeholder="Phone number"
        />
        <button class="button" id="send-button">
          <img id="send-icon" src="/images/send2.png" />
        </button>
      </div>
    </form>
  </div>

  <template id="list-item-template">
    <li class="list-item">
      <label class="list-item-label">
        <span class="input-item" data-list-item-input></span>
      </label>
      <button data-button-delete>‚ùå</button>
    </li>
  </template>
</div>
